<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:gravity="center_vertical|center_horizontal">


    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fab_deletar_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete_white_24dp"
        fab:fab_size="normal"
        fab:fab_colorNormal="@color/colorFAB"
        fab:fab_colorPressed="@color/colorFABPressed"/>

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fab_editar_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mode_edit_white_24dp"
        fab:fab_size="normal"
        fab:fab_colorNormal="@color/colorFAB"
        fab:fab_colorPressed="@color/colorFABPressed" />

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fab_agendar_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_event_white_24dp"
        fab:fab_size="normal"
        fab:fab_colorNormal="@color/colorFAB"
        fab:fab_colorPressed="@color/colorFABPressed" />

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fab_extintor_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_extintor_white_24dp"
        fab:fab_size="normal"
        fab:fab_colorNormal="@color/colorFAB"
        fab:fab_colorPressed="@color/colorFABPressed"/>

</LinearLayout>